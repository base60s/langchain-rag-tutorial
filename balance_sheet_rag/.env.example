# Balance Sheet RAG System Configuration
# Copy this file to .env and fill in your actual values

# External API Keys
EXTERNAL_OPENAI_API_KEY=your_openai_api_key_here
EXTERNAL_ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
EXTERNAL_FINANCIAL_MODELING_PREP_API_KEY=your_fmp_key_here

# Database Configuration
DB_URL=sqlite:///./balance_sheet_rag.db
DB_ECHO=False

# Embedding Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_CHUNK_SIZE=500
EMBEDDING_CHUNK_OVERLAP=100
EMBEDDING_BATCH_SIZE=100

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000

# Vector Store Configuration
VECTORSTORE_PROVIDER=chroma
VECTORSTORE_PERSIST_DIRECTORY=./data/vectorstore
VECTORSTORE_COLLECTION_NAME=balance_sheets
VECTORSTORE_SIMILARITY_THRESHOLD=0.7
VECTORSTORE_TOP_K=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False
API_CORS_ORIGINS=["*"]

# Document Processing Configuration
PROCESSING_MAX_FILE_SIZE_MB=50
PROCESSING_SUPPORTED_FORMATS=["pdf","xlsx","xls","csv","xml","txt"]
PROCESSING_OCR_ENABLED=True
PROCESSING_PARALLEL_PROCESSING=True

# Financial Analysis Configuration
FINANCIAL_DEFAULT_CURRENCY=USD
FINANCIAL_YEAR_END=12-31
FINANCIAL_INDUSTRY_BENCHMARKS_ENABLED=True
FINANCIAL_RATIO_CALCULATION_PRECISION=4

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE_PATH=./logs/balance_sheet_rag.log

# Application Settings
APP_NAME="Balance Sheet RAG"
APP_VERSION="1.0.0"
APP_ENVIRONMENT=development